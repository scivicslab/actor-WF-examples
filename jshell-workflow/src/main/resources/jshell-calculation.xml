<?xml version="1.0" encoding="UTF-8"?>
<workflow name="jshell-calculation">
    <matrix>
        <!--
        このワークフローは3ステップの計算を実行します:
        1. "10 + 5" を評価（結果: 15）
        2. "15 * 2" を評価（前の結果を使用、結果: 30）
        3. 最後の計算結果を取得して表示
        -->

        <!-- ステップ1: 初期計算 (10 + 5) -->
        <transition from="0" to="1">
            <action actor="jshellCalc" method="eval">10 + 5</action>
        </transition>

        <!-- ステップ2: 前の結果を2倍にする -->
        <transition from="1" to="2">
            <action actor="jshellCalc" method="eval">Math.sqrt(16)</action>
        </transition>

        <!-- ステップ3: 最終結果を取得 (DIRECT実行モード) -->
        <transition from="2" to="end">
            <action actor="jshellCalc" method="getLastResult" execution="direct"></action>
        </transition>
    </matrix>
</workflow>
